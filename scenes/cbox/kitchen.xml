	<shape type="obj">
		<string name="filename" value="../meshes/kitchen/handles.obj"/>
		<ref type="material" id="handle"/>
	</shape>

	<shape type="obj">
		<string name="filename" value="../meshes/kitchen/lights.obj"/>
